@model Country

@{
    ViewData["Title"] = $"{Model.Name} Details";
}

<div class="wrapper">
    <div class="container">
        <h2 class="mt-4">@Model.Name</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th>Name</th>
                        <th>Population</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>Continent</th>
                        <th>Capital</th>
                        <th>Area</th>
                        <th>Currency</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Name</td>
                        <td>@Model.Population</td>
                        <td>@Model.Latitude</td>
                        <td>@Model.Longitude</td>
                        <td>@Model.Continent</td>
                        <td>@Model.Capital</td>
                        <td>@Model.Area</td>
                        <td>@Model.Currency</td>
                        <td>@Model.Description</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


<style>
    .wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100dvh;
        color: white;
    }

    .table {
        background-color: white;
    }
</style>
